{
  "compilerOptions": {
    "sourceMap": false,
    "module": "commonjs",
    "noImplicitAny": true, // 是否默认禁用 any
    "types": [ // 默认引入的类型声明
      "node", // 默认引入 node 的类型声明
    ],
    "baseUrl": "service",
    "target": "ES2016", // 编译目标
    "declaration": false, // 是否自动创建类型声明
    "moduleResolution": "node",
    "outDir": "dist/service",
    "rootDir": "service",
    "lib": ["ES2015", "ES2016", "ES2020.Promise"]
  },
  "include": [
    "service/**/*"
  ]
}